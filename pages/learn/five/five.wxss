.slide_image{
  width: 100%;
  height: 100%;
}
.swiper-box .wx-swiper-dot{
    width:10rpx;
    display: inline-flex;
    height: 10rpx;
    margin-left:-5rpx;
    justify-content:space-between;
}
.swiper-box .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: rgba(255,255,255,0.8);
    border-radius: 8rpx
}
.swiper-box .wx-swiper-dot-active{ width:40rpx;}
.swiper-box .wx-swiper-dot-active::before{
    background:#fff;   
}



