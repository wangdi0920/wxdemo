<!--pages/learn/four/four.wxml-->
<button type='primary' size='mini' bindtap='chooseAddress'>获取收获地址</button>
<button type='default' size='mini' bindtap='chooseLocation'>打开地图选择位置</button>
<view class='map-con'>
<map
  id="map"
  longitude="113.324520"
  latitude="23.099994"
  scale="14"
  bindcontroltap="controltap"
  markers="{{markers}}"
  bindmarkertap="markertap"
  polyline="{{polyline}}"
  bindregionchange="regionchange"
  show-location="true"
  style="width: 100%; height: 300px;"
></map>
</view>

